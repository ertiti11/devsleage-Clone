---
const CONCURSANTES = [
  {
    nombre: "Goncy",
    image: "https://devsleague.com/img/capitanes-tr/goncy.png",
    points: 65,
  },
  {
    nombre: "Carmen",
    image: "https://devsleague.com/img/capitanes-tr/carmen.png",
    points: 65,
  },
  {
    nombre: "HÃ©ctor",
    image: "https://devsleague.com/img/capitanes-tr/hector.png",
    points: 41,
  },
  {
    nombre: "Noe",
    image: "https://devsleague.com/img/capitanes-tr/noe.png",
    points: 30,
  },
];
---

<section class="flex flex-col w-full p-12 gap-5">
  <table>
    <tbody>
      {
        CONCURSANTES.map((concursante, index) => {
          return (
            <tr>
              <th>
                <p class="font-bold text-3xl text-white">{index}</p>
              </th>

              <td>
                <img
                  src={concursante.image}
                  alt={concursante.nombre}
                  class=" rounded-3xl  w-20 border-1 border-white"
                />
              </td>
              <td>
                <p class="font-bold text-5xl text-white">
                  {concursante.nombre}
                </p>
              </td>

              <td>
                <p class="font-bold text-3xl text-yellow-400">{concursante.points}</p>
              </td>
            </tr>
          );
        })
      }
    </tbody>
  </table>
</section>

